<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SearchFragment">


    <TextView
        android:id="@+id/lblSearchFragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txtSearchFragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:labelFor="@+id/lblSearchFragmentTitle" />

    <CheckBox
        android:id="@+id/ckbSearchFragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="0" />

    <TextView
        android:id="@+id/lblSearchFragmentContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1" />

    <EditText
        android:id="@+id/txtSearchFragmentContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:labelFor="@+id/lblSearchFragmentContent" />

    <CheckBox
        android:id="@+id/ckbSearchFragmentContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="1" />

    <ImageButton
        android:id="@+id/btnSearchFragmentSearch"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_column="3"
        android:layout_margin="10dp"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:contentDescription=" "
        android:src="@android:drawable/ic_menu_search" />

</GridLayout>